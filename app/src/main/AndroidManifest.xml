<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.mybanjir">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        tools:replace="android:allowBackup">
        <activity
            android:name=".Menu.ReportHistory"
            android:exported="false"
            android:theme="@style/Theme.Transparent"/>
        <activity
            android:name=".Favourite.Favourite"
            android:exported="false"
            android:theme="@style/Theme.Transparent" />
        <activity
            android:name=".Home.HomeSetup"
            android:exported="false"
            android:theme="@style/Theme.Transparent" />
        <activity
            android:name=".Search.list_view"
            android:exported="false"
            android:theme="@style/Theme.Search" />
        <activity
            android:name=".Search.Search"
            android:exported="false"
            android:theme="@style/Theme.Transparent" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".Stats.Status"
            android:exported="false"
            android:theme="@style/Theme.Transparent" />
        <activity
            android:name=".Report.Reports"
            android:exported="false"
            android:theme="@style/Theme.Transparent" />
        <activity
            android:name=".Alert.AlertCentre"
            android:exported="false"
            android:theme="@style/Theme.Transparent" />
        <activity
            android:name=".Menu.Menu"
            android:exported="false"
            android:theme="@style/Theme.MyBanjir" />
        <activity
            android:name=".Home.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MyBanjir">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>